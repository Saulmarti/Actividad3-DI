<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context="com.example.a2dam.actividad3_di.MainActivity">


    <RelativeLayout
        android:layout_width="175dp"
        android:layout_height="473dp"
        android:background="@android:color/darker_gray"
        android:gravity="center"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="9dp">

        <TextView
            android:id="@+id/Album1"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@android:color/holo_red_dark"
            android:gravity="center"
            android:text="Album1"
            android:textColor="@android:color/background_light"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/Album2"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_below="@+id/Album1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@android:color/holo_orange_light"
            android:gravity="center"
            android:text="Album2"
            android:textColor="@android:color/background_dark"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/Album3"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_below="@+id/Album2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="?attr/colorButtonNormal"
            android:gravity="center"
            android:text="Album3"
            android:textColor="@android:color/background_dark"
            android:textSize="24sp" />
    </RelativeLayout>

    <GridLayout
        android:layout_width="170dp"
        android:layout_height="478dp"
        android:background="@android:color/holo_red_dark"
        android:columnCount="2"
        tools:layout_editor_absoluteX="187dp"
        tools:layout_editor_absoluteY="6dp">


        <TextView
            android:id="@+id/Foto1"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:layout_column="0"
            android:layout_margin="5dp"
            android:layout_row="0"
            android:background="@android:color/holo_orange_light"
            android:gravity="center"
            android:text="Foto1"
            android:textColor="@android:color/background_dark" />

        <TextView
            android:id="@+id/Foto2"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:layout_column="1"
            android:layout_margin="5dp"
            android:layout_row="0"
            android:background="@android:color/holo_orange_light"
            android:gravity="center"
            android:text="Foto2"
            android:textColor="@android:color/black" />


        <TextView
            android:id="@+id/Foto3"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:layout_column="0"
            android:layout_margin="5dp"
            android:layout_row="1"
            android:background="@android:color/holo_orange_light"
            android:gravity="center"
            android:text="Foto3"
            android:textColor="@android:color/black" />



        <TextView
            android:id="@+id/Foto4"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:layout_column="1"
            android:layout_margin="5dp"
            android:layout_row="1"
            android:background="@android:color/holo_orange_light"
            android:gravity="center"
            android:text="Foto4"
            android:textColor="@android:color/black" />


        <TextView
            android:id="@+id/Foto5"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:layout_column="0"
            android:layout_margin="5dp"
            android:layout_row="2"
            android:background="@android:color/holo_orange_light"
            android:gravity="center"
            android:text="Foto5"
            android:textColor="@android:color/background_dark" />

        <TextView
            android:id="@+id/Foto6"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:layout_column="01"
            android:layout_margin="5dp"
            android:layout_row="2"
            android:background="@android:color/holo_orange_light"
            android:gravity="center"
            android:text="Foto6"
            android:textColor="@android:color/black" />


    </GridLayout>
</android.support.constraint.ConstraintLayout>
